@model List<Product>

@{
    ViewBag.Title = "لیست محصولات";

    int index = 1;
}

<h2>Index</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ردیف</th>
            <th>نام</th>
            <th>تعداد</th>
            <th>تاریخ ثبت</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(index++)</td>
                <td>@item.Title</td>
                <td>@item.Count</td>
                <td>@item.RegisterDate.ToString()</td>
                <td>
                    <a href="/Admin/Products/Add/@item.ID" class="btn btn-sm btn-warning">ویرایش</a>
                </td>
            </tr>
        }
    </tbody>
</table>